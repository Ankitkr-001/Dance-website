extends base.pug

block scripts
  script(src='../static/index.js.js')
block style 
  style 
        include ../static/style.css   
        include ../static/contact.css   
block content 
  div#container
    h1 Contact us
    form(action="/contact" method="post" Class="myForm") 
        input(type="text", name="name", placeholder="Enter your name" Class="myInput")
        input(type="phone", name="phone", placeholder="Enter your Phone number" Class="myInput")
        input(type="email", name="email", placeholder="Enter your email" Class="myInput")
        input(type="text", name="address", placeholder="Enter your Address" Class="myInput")
        input(type="text", name="desn", placeholder="Enter your concern" Class="myInput")
        button.btn
          | Submit 
    
